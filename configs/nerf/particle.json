{
	"loss": {
		"otype": "Huber"
	},
	"dir_encoding": {
		"otype": "Composite",
		"nested": [
			{
				"n_dims_to_encode": 3,
				"otype": "SphericalHarmonics",
				"degree": 4
			},
			{
				"otype": "Identity",
				"n_bins": 4,
				"degree": 4
			}
		]
	},
	"distortion_map": {
		"resolution": [32, 32],
		"optimizer": {
			"otype": "ExponentialDecay",
			"decay_start": 10000,
			"decay_interval": 5000,
			"decay_end": 25000,
			"decay_base": 0.33,
			"nested": {
				"otype": "Adam",
				"learning_rate": 1e-4,
				"beta1": 0.9,
				"beta2": 0.99,
				"epsilon": 1e-8
			}
		}
	},
	"envmap": {
		"loss": {
			"otype": "RelativeL2"
		},
		"optimizer": {
			"otype": "Ema",
			"decay": 0.99,
			"nested": {
				"otype": "ExponentialDecay",
				"decay_start": 10000,
				"decay_interval": 5000,
				"decay_base": 0.33,
				"nested": {
					"otype": "Adam",
					"learning_rate": 1e-2,
					"beta1": 0.9,
					"beta2": 0.99,
					"beta3": 0.9,
					"beta_shampoo": 0.0,
					"epsilon": 1e-10,
					"identity": 0.0001,
					"cg_on_momentum": false,
					"frobenius_normalization": true,
					"l2_reg": 1e-10
				}
			}
		}
	},
	"optimizer": {
		"otype": "Ema",
		"decay": 0.95,
		"nested": {
			"otype": "Adam",
			"learning_rate": 1e-2,
			"beta1": 0.9,
			"beta2": 0.99,
			"epsilon": 1e-15,
			"l2_reg": 1e-6
		}
	},
	"network": {
		"otype": "FullyFusedMLP",
		"activation": "ReLU",
		"output_activation": "None",
		"n_neurons": 64,
		"n_hidden_layers": 1
	},
	"rgb_network": {
		"otype": "FullyFusedMLP",
		"activation": "ReLU",
		"output_activation": "None",
		"n_neurons": 64,
		"n_hidden_layers": 2
	},

	"encoding": {
		"otype": "Particle",
		"n_particles": [200000],
		"search_radius": [0.04],
		"dim_features": 4, 
		"n_levels": 1,
		"position_optimizer": {
			"otype": "Adam",
			"learning_rate": 1e-3, 
			"beta1": 0.9,
			"beta2": 0.999,
			"epsilon": 1e-15,
			"l2_reg": 0
		},
		"feature_optimizer": {
			"otype": "Adam",
			"learning_rate": 1e-2,
			"dim": 4, 
			"beta1": 0.9,
			"beta2": 0.999,
			"epsilon": 1e-15,
			"l2_reg": 1e-6 
		}
	}
}
